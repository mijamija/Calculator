<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F98E"
    tools:context="com.example.interns.calculator.MainActivity">

    <Button
        android:id="@+id/buttonNumber1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="176dp"
        android:background="#C1DB43"
        android:text="1" />

    <Button
        android:id="@+id/buttonNumber5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonNumber4"
        android:layout_alignBottom="@+id/buttonNumber4"
        android:layout_alignLeft="@+id/buttonNumber2"
        android:layout_alignStart="@+id/buttonNumber2"
        android:background="#C1DB43"
        android:text="5" />

    <Button
        android:id="@+id/buttonNumber6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonNumber5"
        android:layout_alignBottom="@+id/buttonNumber5"
        android:layout_alignLeft="@+id/buttonNumber3"
        android:layout_alignStart="@+id/buttonNumber3"
        android:background="#C1DB43"
        android:text="6" />

    <Button
        android:id="@+id/buttonNumber2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonNumber1"
        android:layout_alignBottom="@+id/buttonNumber1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/buttonNumber1"
        android:layout_toRightOf="@+id/buttonNumber1"
        android:background="#C1DB43"
        android:text="2" />

    <Button
        android:id="@+id/buttonNumber3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonNumber2"
        android:layout_alignBottom="@+id/buttonNumber2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/buttonNumber2"
        android:layout_toRightOf="@+id/buttonNumber2"
        android:background="#C1DB43"
        android:text="3" />

    <Button
        android:id="@+id/buttonNumber4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonNumber1"
        android:layout_alignStart="@+id/buttonNumber1"
        android:layout_below="@+id/buttonNumber1"
        android:layout_marginTop="23dp"
        android:background="#C1DB43"
        android:text="4" />

    <Button
        android:id="@+id/buttonNumber7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonNumber4"
        android:layout_alignStart="@+id/buttonNumber4"
        android:layout_below="@+id/buttonNumber5"
        android:layout_marginTop="22dp"
        android:background="#C1DB43"
        android:text="7" />

    <Button
        android:id="@+id/buttonNumber8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonNumber5"
        android:layout_alignStart="@+id/buttonNumber5"
        android:layout_alignTop="@+id/buttonNumber7"
        android:background="#C1DB43"
        android:text="8" />

    <Button
        android:id="@+id/buttonNumber9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonNumber6"
        android:layout_alignStart="@+id/buttonNumber6"
        android:layout_alignTop="@+id/buttonNumber8"
        android:background="#C1DB43"
        android:text="9" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/buttonNumber3"
        android:layout_toRightOf="@+id/buttonNumber3"
        android:background="#C1DB43"
        android:text="+" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonPlus"
        android:layout_alignStart="@+id/buttonPlus"
        android:layout_alignTop="@+id/buttonNumber6"
        android:background="#C1DB43"
        android:text="-" />

    <Button
        android:id="@+id/buttonDevide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonMinus"
        android:layout_alignStart="@+id/buttonMinus"
        android:layout_alignTop="@+id/buttonNumber9"
        android:background="#C1DB43"
        android:text="/" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonDevide"
        android:layout_alignRight="@+id/buttonDevide"
        android:layout_below="@+id/buttonDevide"
        android:layout_marginTop="26dp"
        android:background="#C1DB43"
        android:text="*" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonMultiply"
        android:layout_alignLeft="@+id/buttonNumber9"
        android:layout_alignStart="@+id/buttonNumber9"
        android:layout_alignTop="@+id/buttonMultiply"
        android:background="#C1DB43"
        android:text="." />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonDot"
        android:layout_alignEnd="@+id/buttonNumber8"
        android:layout_alignRight="@+id/buttonNumber8"
        android:background="#C1DB43"
        android:text="=" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonEqual"
        android:layout_alignEnd="@+id/buttonNumber7"
        android:layout_alignRight="@+id/buttonNumber7"
        android:background="#C1DB43"
        android:text="del" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="56dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/buttonNumber2"
        android:layout_alignRight="@+id/buttonPlus"
        android:layout_alignEnd="@+id/buttonPlus"
        android:layout_alignLeft="@+id/buttonNumber1"
        android:layout_alignStart="@+id/buttonNumber1" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonMultiply"
        android:layout_alignLeft="@+id/buttonDelete"
        android:layout_alignRight="@+id/buttonMultiply"
        android:layout_alignStart="@+id/buttonDelete"
        android:layout_below="@+id/buttonMultiply"
        android:layout_marginTop="33dp"
        android:background="#C1DB43"
        android:text="Clear" />
</RelativeLayout>
